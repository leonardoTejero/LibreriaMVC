@model libreriaNeoris.Domain.Dto.UserDto

@{
    ViewData["Title"] = "Register";
    Layout = "_LayoutLogin";
}

<div class="centrado">
    <div class=" row login-card-bg mx-auto" style="width: 800px;">
        <div class="col-12 animate__animated animate__backInRight">
            <section>
                <form id="account" asp-controller="Auth" asp-action="Register" method="post">
                    <h3> Crear  cuenta</h3>
                    <hr />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Name"> </label>
                        <input asp-for="Name" type="text" maxlength="100" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="LastName"> </label>
                        <input asp-for="LastName" type="text" maxlength="100" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="UserName"> </label>
                        <input asp-for="UserName" type="text" maxlength="200" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="Password"> </label>
                        <input asp-for="Password" type="password" maxlength="200" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword"> </label>
                        <input asp-for="ConfirmPassword" type="password" maxlength="100" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="text-align:right">
                        <input type="submit" value="Guardar" class="btn btn-primary" />  

                        <a asp-action="Login" class="btn btn-info">Regresar</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>



@*habilita los datanotations*@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}