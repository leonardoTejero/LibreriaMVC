@model libreriaNeoris.Domain.Dto.UserDto

@{
    ViewData["Title"] = "Authentication";
    Layout = "_LayoutLogin";
}

<div class="centrado">
    <div class="row login-card-bg mx-auto" style="width: 500px;">
        <div class="col-12 animate__animated animate__backInLeft mx-auto">
            <div class="text-center mb-3">
                <h3 class="fw-bold">Iniciar Sesión</h3>
            </div>
            <div>
                <section>
                    <form id="account" asp-controller="Auth" asp-action="Login" method="post">
                        <h5 class="">Ingresa con tu cuenta</h5>
                        <div asp-validation-summary="ModelOnly" class="text-danger fw-bold"></div>

                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label fw-bold">Correo</label>
                            <input asp-for="UserName" type="text" maxlength="100" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger fw-bold"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold">Contraseña</label>
                            <input asp-for="Password" type="password" maxlength="100" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger fw-bold"></span>
                        </div>

                        <div class="mb-3" style="text-align:right">
                            <input type="submit" value="Ingresar" class="btn btn-primary" />
                        </div>

                        <div class="mb-2 text-center">
                            <a asp-action="Register">Crear nueva cuenta</a> |
                            <a asp-action="ForgotPass">Olvidé la contraseña</a>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}